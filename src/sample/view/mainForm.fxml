<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.MainController">
   <children>
      <VBox>
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Reports">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Appointments by type and month" />
                        <MenuItem mnemonicParsing="false" text="Contact schedule" />
                        <MenuItem mnemonicParsing="false" text="ADDITIONAL REPORT" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <TabPane prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Appointments">
                  <content>
                    <AnchorPane>
                           <children>
                              <VBox prefWidth="900.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" prefHeight="30.0">
                                       <children>
                                          <RadioButton fx:id="appViewAllRadio" mnemonicParsing="false" onAction="#viewAllHandler" text="View All">
                                             <HBox.margin>
                                                <Insets left="20.0" right="20.0" />
                                             </HBox.margin>
                                             <toggleGroup>
                                                <ToggleGroup fx:id="appViewGroup" />
                                             </toggleGroup>
                                          </RadioButton>
                                          <RadioButton fx:id="appViewWeekRadio" mnemonicParsing="false" onAction="#viewWeekHandler" text="View Week" toggleGroup="$appViewGroup">
                                             <HBox.margin>
                                                <Insets right="20.0" />
                                             </HBox.margin>
                                          </RadioButton>
                                          <RadioButton fx:id="appViewMonthRadio" mnemonicParsing="false" onAction="#viewMonthHandler" text="View Month" toggleGroup="$appViewGroup" />
                                       </children>
                                    </HBox>
                                    <TableView fx:id="appTableView">
                                      <columns>
                                        <TableColumn fx:id="appIdCol" prefWidth="100.0" text="Appointment_ID" />
                                          <TableColumn fx:id="appTitleCol" prefWidth="60.0" text="Title" />
                                        <TableColumn fx:id="appDescriptionCol" prefWidth="100.0" text="Description" />
                                          <TableColumn fx:id="appLocationCol" prefWidth="60.0" text="Location" />
                                          <TableColumn fx:id="appTypeCol" prefWidth="75.0" text="Type" />
                                          <TableColumn fx:id="appStartCol" prefWidth="100.0" text="Start" />
                                          <TableColumn fx:id="appEndCol" prefWidth="100.0" text="End" />
                                          <TableColumn fx:id="appCustomerCol" prefWidth="85.0" text="Customer" />
                                          <TableColumn fx:id="appUserCol" prefWidth="85.0" text="User" />
                                          <TableColumn fx:id="appContactCol" prefWidth="85.0" text="Contact" />
                                      </columns>
                                    </TableView>
                                    <ButtonBar prefHeight="40.0" prefWidth="351.0">
                                       <buttons>
                                          <Button fx:id="addAppButton" mnemonicParsing="false" onAction="#addAppHandler" text="Add" />
                                          <Button fx:id="modifyAppButton" mnemonicParsing="false" onAction="#modifyAppHandler" text="Modify" />
                                        <Button fx:id="deleteAppButton" mnemonicParsing="false" onAction="#deleteAppHandler" text="Delete" />
                                       </buttons>
                                    </ButtonBar>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Customers">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox>
                                 <children>
                                    <TableView fx:id="customerTableView" prefHeight="300.0">
                                       <columns>
                                          <TableColumn fx:id="customerIdCol" prefWidth="76.0" text="Customer_ID" />
                                          <TableColumn fx:id="customerNameCol" prefWidth="100.0" text="Customer_Name" />
                                          <TableColumn fx:id="customerAddressCol" prefWidth="100.0" text="Address" />
                                          <TableColumn fx:id="customerPostalCol" prefWidth="71.0" text="Postal Code" />
                                          <TableColumn fx:id="customerPhoneCol" prefWidth="75.0" text="Phone" />
                                          <TableColumn fx:id="customerDivisionCol" prefWidth="68.0" text="Division" />
                                       </columns>
                                    </TableView>
                                    <ButtonBar prefHeight="40.0" prefWidth="351.0">
                                       <buttons>
                                          <Button fx:id="addCustomerButton" mnemonicParsing="false" onAction="#addCustomerHandler" text="Add" />
                                          <Button fx:id="modifyCustomerButton" mnemonicParsing="false" onAction="#modifyCustomerHandler" text="Modify" />
                                          <Button fx:id="deleteCustomerButton" mnemonicParsing="false" onAction="#deleteCustomerHandler" text="Delete" />
                                       </buttons>
                                    </ButtonBar>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </content>
                </Tab>
                  <Tab text="Reports">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <HBox fx:id="reportComboArea" alignment="CENTER_LEFT" prefHeight="40.0">
                                 <children>
                                    <Label text="Report Type">
                                       <HBox.margin>
                                          <Insets left="10.0" right="10.0" />
                                       </HBox.margin>
                                    </Label>
                                    <ComboBox fx:id="reportTypeCombo" onAction="#selectReportHandler" prefWidth="150.0" promptText="Select report type">
                                       <HBox.margin>
                                          <Insets left="10.0" />
                                       </HBox.margin>
                                    </ComboBox>
                                    <HBox fx:id="reportDynamicComboArea" alignment="CENTER_LEFT" />
                                 </children>
                              </HBox>
                              <HBox fx:id="reportDynamicTableArea" />
                           </children>
                        </VBox>
                     </content></Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
